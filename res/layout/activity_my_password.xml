<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_psd_jiu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:text="当前密码："
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_psd_jiu"
        style="@style/mw"
        android:hint="旧密码"
        android:password="true"
        android:textColor="#880000ff" />

    <TextView
        android:id="@+id/tv_psd_xin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:text="新密码："
       
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_psd_xin"
        style="@style/mw"
        android:hint="新密码"
        android:password="true"
        android:textColor="#880000ff" />

    <TextView
        android:id="@+id/tv_psd_zai"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:text="确认密码："
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_psd_zai"
        style="@style/mw"
        android:hint="确认密码"
        android:password="true"
        android:textColor="#880000ff" />

    <TextView
        android:id="@+id/tv_psd_tixing"
        style="@style/ww"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="密码长度至少6个字符，最多15个字符" />

    <Button
        android:id="@+id/btn_psd_xin"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#06c1ad"
        android:text="确定"
        android:textColor="#ffffff" />

</LinearLayout>