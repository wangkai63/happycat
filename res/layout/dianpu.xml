<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mm"
    android:background="#e4e4e4"
    android:orientation="vertical"
    tools:context=".DianPuActivity" >

    <LinearLayout
        style="@style/mo"
        android:layout_weight="1.5"
        android:background="#06c1ad"
        android:orientation="horizontal" >

        <RelativeLayout style="@style/mm" >

            <ImageButton
                android:id="@+id/sjreturn"
                style="@style/ww"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/left" />

            <TextView
                android:id="@+id/sjname"
                style="@style/ww"
                android:layout_centerInParent="true"
                android:text="商家姓名"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/sjshoucang"
                style="@style/ww"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/star2" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/sjimg"
        style="@style/mo"
        android:layout_weight="4"
        android:background="#fff" />

    <LinearLayout
        style="@style/mo"
        android:layout_marginTop="2dp"
        android:layout_weight="0.8" >

        <TextView
            style="@style/om"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="平均配送时长" />

        <TextView
            style="@style/om"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="起送价" />

        <TextView
            style="@style/om"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="配送费" />
    </LinearLayout>

    <LinearLayout
        style="@style/mo"
        android:layout_weight="1.7" >

        <TextView
            android:id="@+id/sjtime"
            style="@style/om"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="平均配送时长"
            android:textColor="#ff0000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sjprice"
            style="@style/om"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="起送价"
            android:textColor="#ff0000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sjtip"
            style="@style/om"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="配送费"
            android:textColor="#ff0000"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/mo"
        android:layout_marginTop="8dp"
        android:layout_weight="1.5"
        android:background="#fff" >

        <TextView
            android:id="@+id/sjyytime"
            style="@style/ww"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="营业时间" />
    </LinearLayout>

    <LinearLayout
        style="@style/mo"
        android:layout_marginTop="2dp"
        android:layout_weight="1.5"
        android:background="#fff" >

        <TextView
            android:id="@+id/sjtext"
            style="@style/ww"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="商店描述" />
    </LinearLayout>

    <LinearLayout
        style="@style/mo"
        android:layout_marginTop="2dp"
        android:layout_weight="1.5"
        android:background="#fff" >

        <RelativeLayout style="@style/mm" >

            <ImageButton
                android:id="@+id/phone1"
                style="@style/ww"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/phone" />

            <TextView
                android:id="@+id/sjphone"
                style="@style/ww"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/phone1"
                android:text="手机号码" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/mo"
        android:layout_marginTop="2dp"
        android:layout_weight="3"
        android:background="#fff" >

        <TextView
            android:id="@+id/sjaddress"
            style="@style/mm"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="商家地址" />
    </LinearLayout>

</LinearLayout>