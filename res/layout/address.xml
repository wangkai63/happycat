<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.happycat.AddressActivity" >

    <LinearLayout
        style="@style/mo"
        android:layout_weight="1.2"
        android:background="#06c1ad" >

        <ImageButton
            android:id="@+id/photo1"
            style="@style/ww"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:src="@drawable/left" />

        <TextView
            style="@style/mm"
            android:gravity="center"
            android:text="我的地址"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.5" >

        <ListView
            android:id="@+id/address_listview"
            style="@style/mw"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:divider="#5506c1ad"
            android:dividerHeight="1dp" >
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wode_dz1"
        style="@style/mo"
        android:layout_weight="1.3"
        android:background="#06c1ad" >

        <ImageView
            android:id="@+id/wd_dizhi"
            style="@style/ww"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:src="@drawable/dzadd" />

        <Button
            android:id="@+id/add_address"
            style="@style/ww"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/wd_dizhi"
            android:background="@null"
            android:paddingRight="0dp"
            android:text="新增"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>