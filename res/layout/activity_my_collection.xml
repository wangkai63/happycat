<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff8f8f8"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/ddd_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e4e4e4"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/collection_goods"
                style="@style/collection_list"
                android:button="@null"
                android:checked="true"
                android:drawableBottom="@drawable/dingdan"
                android:text="美食"
                android:textColor="@color/textcolor" />

            <View style="@style/collection_line" />

            <RadioButton
                android:id="@+id/collection_shops"
                style="@style/collection_list"
                android:button="@null"
                android:drawableBottom="@drawable/dingdan"
                android:text="店铺"
                android:textColor="@color/textcolor" />
        </RadioGroup>
    </LinearLayout>

    <View style="@style/order_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/collection_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>

</LinearLayout>