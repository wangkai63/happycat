<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_collect_item_info"
    style="@style/ww"
   >

    <ImageView
        android:id="@+id/goods_collect_item_pic"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
         android:scaleType="fitXY" />
    
    <TextView
        android:id="@+id/goods_collect_item_title"
       style="@style/ww"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/goods_collect_item_pic"
        android:paddingTop="10dp"
     
        android:text="背景啊啊富士达发生方"
        />
    
    <TextView
        android:id="@+id/goods_collect_item_price"
     style="@style/ww"
        android:layout_alignLeft="@id/goods_collect_item_title"
        android:layout_below="@id/goods_collect_item_title"
      android:layout_marginTop="3dp"
        android:text="￥18.0"
        android:textColor="#ff6600"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/goods_collect_item_time"
       style="@style/ww"
        android:layout_alignLeft="@id/goods_collect_item_title"
        android:layout_below="@id/goods_collect_item_price"
        android:layout_toRightOf="@id/goods_collect_item_pic"
        android:text="2015/9/1" 
        android:layout_marginTop="5dp"
        android:textColor="#666"/>
    
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginLeft="5dp"
        android:padding="5dp"/>
    
</RelativeLayout>