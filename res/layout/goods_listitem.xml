<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ww"
    android:descendantFocusability="blocksDescendants" >

    <LinearLayout
        android:id="@+id/goods_name1"
        style="@style/mw"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/goods_name"
            style="@style/ow"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="6"
            android:text="hahcnuin"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/goodshoucang"
            style="@style/ow"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0.7"
            android:background="@drawable/star2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goods_name2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/goods_name1"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goods_name3"
        style="@style/mw"
        android:layout_below="@id/goods_name2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/goods_price"
            style="@style/ow"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goods_nume"
            style="@style/ow"
            android:layout_marginLeft="15dp"
            android:layout_weight="3"
            android:textColor="#666"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/goods_sub"
            style="@style/ow"
            android:layout_marginBottom="5dp"
            android:layout_weight="2.5"
            android:background="@null"
            android:src="@drawable/subtract" />

        <TextView
            android:id="@+id/geshu"
            style="@style/ow"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/goods_add"
            style="@style/ow"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2.5"
            android:background="@null"
            android:src="@drawable/add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/goods_name3"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>